<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrightnessController.App.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout Orientation="Vertical">
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="10">
            <Label>Adress:</Label>
            <Entry WidthRequest="225"/>
            <Button Text="Ok" Command="{Binding SubmitCommand}"/>
        </StackLayout>
        <Slider 
            HorizontalOptions="CenterAndExpand" 
            Margin="10" 
            DragCompletedCommand="{Binding SliderValueChangedCommand}"
            Value="{Binding SliderValue}"
            IsVisible="{Binding AddressSubmitted}"
            WidthRequest="225"/>
    </StackLayout>

</ContentPage>